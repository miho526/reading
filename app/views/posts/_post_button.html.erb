<%= form_with(url: new_post_path, local: true, method: :get) do |f| %>
  <% @shelf = current_user.shelves.find_by(book_id: my_book.id) %>
  <%= hidden_field_tag :book_id, @shelf.book_id %>
  <% if @shelf.post_flag %> 
    <p><%= '投稿済' %></p>
  <% else %>
    <%= f.submit '投稿', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% end %>