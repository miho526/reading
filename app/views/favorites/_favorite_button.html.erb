<% if current_user.like?(post) %>
  <%= form_with(model: current_user.favorites.find_by(post_id: post.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag  :post_id, post.id %>
    <%= f.submit 'いいね解除', class: 'btn btn-warning btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build(post_id: post.id), local: true) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.submit 'いいね', class: 'btn btn-success btn-sm' %>
  <% end %>
<% end %>